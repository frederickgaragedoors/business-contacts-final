{
  "name": "business-contacts-manager",
  "private": true,
  "version": "1.0.0",
  "description": "A modern and sleek business contacts application.",
  "author": "Your Name",
  "main": "electron/main.js",
  "type": "module",
  "homepage": ".",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "jspdf": "2.5.1",
    "jspdf-autotable": "3.5.28",
    "firebase": "^10.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.businesscontacts.app",
    "productName": "Business Contacts Manager",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "icons/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.png"
    }
  }
}